package pages

import "script_validation/views/components"
import "script_validation/models"

templ ConversationPage(conversation models.APIConversationOutput) {
	@Layout() {
		@Nav()
		<div class="container mx-auto max-w-4xl py-8 px-4">
			<div class="py-4">
				@components.Conversation(conversation)
				@components.ValidationForm()
				<h2 class="text-lg py-4">Test Results:</h2>
				<div id="testResults" class="flex flex-col space-y-4"></div>
			</div>
		</div>
	}
}
